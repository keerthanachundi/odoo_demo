<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_demo_model_form" model="ir.ui.view">
        <field name="name">demo.model.form</field>
        <field name="model">demo.model</field>
        <field name="arch" type="xml">
            <form string="Demo Model">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_demo_model_tree" model="ir.ui.view">
        <field name="name">demo.model.tree</field>
        <field name="model">demo.model</field>
        <field name="arch" type="xml">
            <tree string="Demo Model">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_demo_model" model="ir.actions.act_window">
        <field name="name">Demo Model</field>
        <field name="res_model">demo.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_demo_root" name="Demo"/>
    <menuitem id="menu_demo_model" name="Demo Model" parent="menu_demo_root" action="action_demo_model"/>
</odoo>
